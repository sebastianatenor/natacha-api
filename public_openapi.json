{
  "openapi": "3.1.0",
  "info": {
    "title": "Natacha Public API",
    "version": "1.0.0",
    "description": "Public actions available for the Natacha GPT."
  },
  "servers": [
    {
      "url": "https://natacha-api-422255208682.us-central1.run.app"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "health",
        "summary": "Check service health",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },

    "/natacha/respond": {
      "post": {
        "operationId": "natacha_respond",
        "summary": "Natacha responds using memory and model",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string" },
                  "message": { "type": "string" }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Model response",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },

    "/tasks/add": {
      "post": {
        "operationId": "tasks_add",
        "summary": "Create a task",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string" },
                  "title": { "type": "string" },
                  "detail": { "type": "string" },
                  "project": { "type": "string" },
                  "state": { "type": "string" }
                },
                "required": ["user_id", "title"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task created",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },

    "/tasks/list": {
      "get": {
        "operationId": "tasks_list",
        "summary": "List tasks",
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "schema": { "type": "string" },
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "List of tasks",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },

    "/tasks/update": {
      "post": {
        "operationId": "tasks_update",
        "summary": "Update a task",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string" },
                  "task_id": { "type": "string" },
                  "title": { "type": "string" },
                  "detail": { "type": "string" },
                  "state": { "type": "string" }
                },
                "required": ["user_id", "task_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task updated",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },

    "/memory/v2/store": {
      "post": {
        "operationId": "memory_v2_store",
        "summary": "Store memory with vector",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "text": { "type": "string" },
                        "tags": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      },
                      "required": ["text"]
                    }
                  }
                },
                "required": ["items"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Stored memory",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },

    "/memory/engine/raw": {
      "post": {
        "operationId": "memory_engine_raw",
        "summary": "Store raw memory",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string" },
                  "note": { "type": "string" },
                  "kind": { "type": "string" }
                },
                "required": ["user_id", "note"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Stored raw memory",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    }
  }
}

{
  "openapi": "3.1.0",
  "info": {
    "title": "Natacha Public API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://natacha-api-422255208682.us-central1.run.app"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "health",
        "summary": "Health Check",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/natacha/respond": {
      "post": {
        "operationId": "natacha_respond",
        "summary": "Chat with Natacha",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string" },
                  "message": { "type": "string" },
                  "model": { "type": "string" }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/tasks/add": {
      "post": {
        "operationId": "tasks_add",
        "summary": "Create Task",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string" },
                  "title": { "type": "string" },
                  "detail": { "type": "string" },
                  "project": { "type": "string" },
                  "channel": { "type": "string" },
                  "due": { "type": "string" },
                  "state": { "type": "string" }
                },
                "required": ["user_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task created",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/tasks/list": {
      "get": {
        "operationId": "tasks_list",
        "summary": "List Tasks",
        "parameters": [
          { "name": "user_id", "in": "query", "schema": { "type": ["string", "null"] } },
          { "name": "project", "in": "query", "schema": { "type": ["string", "null"] } },
          { "name": "state", "in": "query", "schema": { "type": ["string", "null"] } }
        ],
        "responses": {
          "200": {
            "description": "Tasks list",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/tasks/update": {
      "post": {
        "operationId": "tasks_update",
        "summary": "Update Task",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string" },
                  "task_id": { "type": "string" },
                  "title": { "type": "string" },
                  "detail": { "type": "string" },
                  "state": { "type": "string" }
                },
                "required": ["user_id", "task_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task updated",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/memory/engine/raw": {
      "post": {
        "operationId": "memory_engine_raw",
        "summary": "Store raw memory",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string" },
                  "note": { "type": "string" },
                  "kind": { "type": "string" },
                  "importance": { "type": "string" },
                  "source": { "type": "string" }
                },
                "required": ["user_id", "note"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Memory stored",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/memory/v2/store": {
      "post": {
        "operationId": "memory_v2_store",
        "summary": "Store vectorized memory",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "text": { "type": "string" },
                        "tags": { "type": "array", "items": { "type": "string" } },
                        "meta": { "type": "object" }
                      },
                      "required": ["text"]
                    }
                  }
                },
                "required": ["items"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Memory stored",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    }
  }
}
